[Unit]
Description=Dependency-Track Satellite Scanner
Requires=dtrack-satellite.network
After=dtrack-satellite.network

[Container]
ContainerName=dtrack-satellite
Image=localhost/dtrack-satellite:latest

# Egress network
Network=dtrack-satellite-network

EnvironmentFile=%h/configuration/secrets/dtrack.env

Volume=/run/user/%U/podman/podman.sock:/run/podman/podman.sock:rw

Environment=PODMAN_HOST=unix:///run/podman/podman.sock
Environment=SYFT_CHECK_FOR_APP_UPDATE=false

[Install]
WantedBy=default.target
